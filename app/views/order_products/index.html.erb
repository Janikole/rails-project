<%= render :partial => 'admin_nav' %>

<h3>Products ordered</h3>

<table>
  <tr>
    <th>Order ID</th>
    <th>Product ID</th>
    <th>Product Name</th>
    <th>Quantity</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @order_products.each do |order_product| %>
  <tr>
    <td><%= order_product.order_id %></td>
    <td><%= order_product.product_id %></td>
    <td><%= Product.find(order_product[:product_id])[:name] %></td>
    <td><%= order_product.quantity %></td>
    <td><%= order_product.price.round(2) %></td>
  </tr>
<% end %>
</table>
